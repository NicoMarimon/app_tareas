<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="740.0" prefWidth="924.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myjavafxapp.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="add_task_button" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#add_task_cliked" prefHeight="22.0" prefWidth="10.0" text="+">
            <font>
               <Font name="Californian FB Bold" size="30.0" />
            </font>
            <padding>
               <Insets bottom="1.0" left="10.0" right="10.0" top="1.0" />
            </padding>
         </Button>
         <HBox alignment="CENTER" prefHeight="74.0" prefWidth="849.0">
            <padding>
               <Insets left="30.0" />
            </padding>
            <children>
               <Label fx:id="ClickMeLabel" contentDisplay="CENTER" prefHeight="64.0" prefWidth="852.0" text="Bienvenido que deseas hacer">
                  <padding>
                     <Insets right="100.0" />
                  </padding>
                  <font>
                     <Font size="25.0" />
                  </font>
               </Label>
            </children>
         </HBox>
      </children>
      <padding>
         <Insets left="20.0" />
      </padding>
   </HBox>
   <TextField fx:id="text_field_add_task" prefHeight="26.0" prefWidth="342.0" />
   <Button fx:id="guardar_tarea" contentDisplay="CENTER" mnemonicParsing="false" onAction="#save_task_click" text="GUARDAR">
      <font>
         <Font name="Californian FB Bold" size="33.0" />
      </font>
   </Button>

  <Label fx:id="welcomeText" />
   <VBox fx:id="tareas_vbox" prefHeight="246.0" prefWidth="630.0" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label fx:id="ClickMeLabel1" alignment="CENTER">
            <padding>
               <Insets right="30.0" />
            </padding>
         </Label>
         <HBox alignment="CENTER" prefHeight="94.0" prefWidth="322.0" />
         <HBox alignment="CENTER" prefHeight="94.0" prefWidth="335.0" />
      </children>
      <padding>
         <Insets left="20.0" />
      </padding>
   </HBox>
   <Label fx:id="explaining_label" alignment="CENTER" />
   <Button fx:id="delete_task" alignment="CENTER" mnemonicParsing="false" onAction="#delete_task_click" prefHeight="33.0" prefWidth="252.0" text="ELIMINAR TAREA">
      <font>
         <Font name="Californian FB Bold" size="25.0" />
      </font>
      <padding>
         <Insets bottom="1.0" left="10.0" right="10.0" top="1.0" />
      </padding>
   </Button>
   <Button fx:id="complete_task_button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#complete_task_click" prefHeight="34.0" prefWidth="322.0" text="TAREA COMPLETADA">
      <font>
         <Font name="Californian FB Bold" size="27.0" />
      </font>
      <padding>
         <Insets bottom="1.0" left="10.0" right="10.0" top="1.0" />
      </padding>
   </Button>
</VBox>
